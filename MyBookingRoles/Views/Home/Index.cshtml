@{
    ViewBag.Title = "Home Page";
    var imgsrc = "";
}

<div class="jumbotron">
    <h1 style="text-align: center;">Welcome to Our Home Page</h1>
    <h4 class="lead" style="text-align: center;">
        <u><b>One</b> of the best Online-Store Starter Website.</u>
    </h4>
    @if (User.IsInRole("Customer"))
    {
        <h3 style="text-align: center; background-color: gray; padding: 5px 5px 5px  5px;">

            @Html.ActionLink("Make a booking", "MakeBooking", "CustomerBooking", null, new { @class = "btn btn-success" })
            &nbsp; &nbsp;
            @Html.ActionLink("Up-Coming Events", "#", "#", null, new { @class = "btn btn-danger" })
        </h3>
    }

</div>

<div class="row">
    <div class="col-md-12" style="background-color: silver;">
        <br />
        <div style="text-align: center;">

            <div class="col-md-4">
                <u>Store Details Here</u>
                <br />
                @Html.ActionLink("Store Catalogue", "ProdCatalogue", "Store", null, new { @class = "btn btn-success" })<br /><br />
            </div>
            <div class="col-md-4">
                <u>Brands Here</u>
                <br />
                @Html.ActionLink("Brands Catalogue", "BrandCatalogue", "Store", null, new { @class = "btn btn-success" })<br /><br />
            </div>
            <div class="col-md-4">
                <u>Categories Here</u>
                <br />
                @Html.ActionLink("Categories Catalogue", "CategoryCatalogue", "Store", null, new { @class = "btn btn-success" })
            </div>
        </div>

        <br />
        <hr />
        <div class="col-md-12" style="text-align:left">
            
            <p><b><u>Products On Discount.</u></b></p>
            
            <br />
            <div class="row" style="padding: 5px; background-color: white;">
                @*@Html.ActionLink("View All Here", "#")*@
                <br />
                <div style="border-top: 1px solid green; padding: 5px 5px 5px 5px;">
                    @if (ViewBag.Discounted != null)
                    {
                        foreach (var item in ViewBag.Discounted)
                        {
                            <div class="col-md-2" style="border-right: 2px solid black;">
                                <div class="panel-primary" style="padding: 5px;">
                                    @if (item.ProductPics != null)
                                    {
                                        var base64 = Convert.ToBase64String(item.ProductPics);
                                        imgsrc = string.Format("data:image/gif;base64,{0}", base64);
                                    }
                                    <img src='@imgsrc' class="img-responsive" />
                                </div>
                                <div style="background-color: silver; text-align: center;">
                                    <p>
                                        <b><u>@item.ProductName | R @item.Price</u></b>
                                    </p>
                                    <p>
                                        Available : <b style="color:blue;">@item.InStoreQuantity Item(s)</b><br />
                                        <b style="color: red;">Discount : R @item.Price</b>
                                    </p>
                                    <div>
                                        @Html.ActionLink("Order Now", "OrderNow", "ShoppingCart", new { id = item.ProductID }, new { @class = "btn btn-success" }) <br /><br />
                                        @Html.ActionLink("Details", "ProductDetails", "Store", new { id = item.ProductID }, new { @class = "btn btn-success" })
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    @*else
                    {
                        <p>
                            There Are No Discounted Products Available.
                        </p>
                    }*@
                </div>
            </div>
            <hr />
        </div>

        <div class="col-md-12" style="text-align:left">
            <p><b><u>Latest Products</u></b></p>
            <br />

            <div class="row" style="padding: 5px; background-color: white;">
                @*@Html.ActionLink("View All Here", "#")*@
