                                        Available : <b style="color:blue;">@item.InStoreQuantity Item(s)</b><br />
                                        <b style="color: red;"><u>Discount : R @item.Price</u></b>
                                    </p>
                                    <div>
                                        @Html.ActionLink("Order Now", "OrderNow", "ShoppingCart", new { id = item.ProductID }, new { @class = "btn btn-success" }) <br /><br />
                                        @Html.ActionLink("Details", "ProductDetails", "Store", new { id = item.ProductID }, new { @class = "btn btn-success" })
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    @*else
                    {
                        <p class="panel-primary" style="padding: 5px;">
                            There Are No Featured Products.
                        </p>
                    }*@
                </div>
            </div>
            <hr />
        </div>
